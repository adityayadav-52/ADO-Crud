@model List<Crud.Models.EmpModel> 


@{
    ViewBag.Title = "Home Page";
}

<center><h1 style="color:red;">ADO Crud Operation</h1></center>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Salary</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.City</td>
            <td><a href="@Url.Action("Edit","Home",new { item.Id})" class="btn btn-success">Edit</a></td>
            <td><a href="@Url.Action("Delete","Home",new { item.Id})" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>

<button type="button" class="btn btn-success" onclick="window.location.href = 'Home/Add';">Add New</button>